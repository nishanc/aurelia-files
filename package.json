{
	"name": "aurelia-files",
	"displayName": "Aurelia Files",
	"author": "Nishan Chathuranga",
	"description": "Quickly scaffold Aurelia file templates",
	"version": "1.0.0",
	"repository": {
        "type": "git",
        "url": "https://github.com/nishanc/aurelia-files"
    },
    "icon": "images/logo.png",
	"publisher": "nishanc",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Programming Languages",
        "Other",
        "Snippets"
	],
	"activationEvents": [
		"workspaceContains:./aurelia_project"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Aurelia Files menu option configuration",
			"properties": {
				"aurelia.menu.component": {
					"type": "boolean",
					"default": true,
					"description": "Shows or hides the menu item."
				}
			}
		},
		"commands": [
			{
				"command": "aurelia-files.addAureliaComponent",
				"title": "Generate Aurelia Component"
			},
			{
				"command": "aurelia-files.addAureliaService",
				"title": "Generate Aurelia Service"
			},
			{
				"command": "aurelia-files.addAureliaInterface",
				"title": "Generate Aurelia Interface"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "config.aurelia.menu.component",
					"command": "aurelia-files.addAureliaComponent",
					"group": "navigation@-1"
				},
				{
					"when": "config.aurelia.menu.component",
					"command": "aurelia-files.addAureliaService",
					"group": "navigation@-1"
				},
				{
					"when": "config.aurelia.menu.component",
					"command": "aurelia-files.addAureliaInterface",
					"group": "navigation@-1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"find-parent-dir": "^0.3.0",
		"find-up-glob": "^1.0.0"
	}
}
